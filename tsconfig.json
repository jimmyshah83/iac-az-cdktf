{
    "compilerOptions": {
      "target": "ES2017",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
    "tsx": {
      "esm": true,
    }
  }